install.packages(c("devtools", "roxygen2", "testthat", "knitr"))
devtools::install_github("hadley/devtools")

library(devtools)
print(has_devel())

#use New Project ... Package - to create new package

#use this to create help files and NAMESPACE file (relys on roxygen2 comments)
devtools::document()


usethis::use_vignette("simode")

#run checks
# devtools::check()
devtools::check(manual = TRUE,
                check_version=TRUE,
                run_dont_test=FALSE)

devtools::load_all()

devtools::build()

#installs
devtools::install()
